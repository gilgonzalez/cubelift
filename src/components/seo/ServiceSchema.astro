---
const { lang = "es", url } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "@id": `${url}#installation-service`,
  serviceType:
    lang === "es"
      ? "Instalación de ascensores por vacío"
      : "Vacuum elevator installation",
  provider: {
    "@type": "Organization",
    name: "Vacuum Lift International",
  },
  areaServed: {
    "@type": "Place",
    name: "Worldwide",
  },
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
